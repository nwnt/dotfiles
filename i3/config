# Keybinding for i3lock
bindsym $mod+x exec --no-startup-id i3lock

# Assign Programs to Workspaces
for_window [class="Google-chrome"] move to workspace $ws2
for_window [class="Pavucontrol"] move to workspace $ws6

# Window Compositor
exec_always --no-startup-id picom -CGb -f --experimental-backend 

# Brightness Control
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl --min-val=2 -q set 3%-
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl -q set 3%+

# Launch polybar
